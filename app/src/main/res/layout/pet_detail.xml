<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pet_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetDetailActivity"
    >

    <ScrollView
        android:id="@+id/scrollViewPetDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:elevation="20dp"
                android:foregroundGravity="center_vertical"

                app:layout_constraintStart_toStartOf="parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbarArrowBack"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme"

                    app:layout_constraintStart_toStartOf="parent"
                    android:elevation="6dp"
                    app:navigationIcon="@drawable/arrow_back_ios_24"

                    />

                <ImageView
                    android:id="@+id/imagePetDetailMissing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxHeight="250dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/xample"

                    />

                <TextView
                    android:id="@+id/typeMissingPetDetailMissing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="#BEEA8282"
                    android:text="Missing"
                    android:textAlignment="center"
                    android:textColor="#FBFBFB"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imagePetDetailMissing" />


            </androidx.constraintlayout.widget.ConstraintLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintTop_toBottomOf="@+id/pet_view"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/namePetDetailMissing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Miles"
                android:textColor="#5F5B5B"
                android:textFontWeight="600"
                android:textSize="24dp"
                android:textStyle="bold" />

            <Space
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_weight="0" />

            <TextView
                android:id="@+id/petStatusDetailMissing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="0"
                android:text="Waiting"
                android:textColor="#36608A"
                android:textFontWeight="600"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/genderPetDetailMissing"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/female"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/pet_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="0"
                android:text="Sex"

                />

            <TextView
                android:id="@+id/agePetDetailMissing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="0"
                android:text="Youth" />

            <TextView
                android:id="@+id/sizePetDetailMissing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="0"
                android:text="Size" />

            <TextView
                android:id="@+id/colorPetDetailMissing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="0"
                android:text="Color" />


        </LinearLayout>

<!--        <GridView-->
<!--            android:id="@+id/pet_category"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:numColumns="2"-->

<!--            />-->


        <TextView
            android:id="@+id/line"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="12dp"
            android:background="#000"
            android:gravity="center_horizontal"
            android:paddingTop="5dip"

            />

        <TextView
            android:id="@+id/breedPetDetailMissing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/icon_pet_foot"
            android:maxHeight="20dp"
            android:text="Tuedo Cat/ Mixed( short coat)"
            android:textSize="15sp"
            app:backgroundTint="@null" />

        <TextView
            android:id="@+id/addressPetDetailMissing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/icon_pet_location"
            android:maxHeight="20dp"
            android:text="@string/default_location"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/postTimeDetailMissing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/icon_post_time"

            android:maxHeight="20dp"
            android:text="Posted a year ago"
            android:textSize="15sp"

            />

        <TextView
            android:id="@+id/descriptionPetDetailMissing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="12dp"
            android:text="Miles is a cat. i guess so."
            android:textSize="15sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Image of Pet"
            android:textColor="#5F5B5B"
            android:textFontWeight="600"
            android:textSize="24dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/light_gray"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Poster information :"


                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Name"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/namePosterPetDetailMissing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hoang Tu" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Address"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/addressPosterPetDetailMissing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="HCM" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:maxWidth="20dp"
                    android:text="The request"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/requestPosterPetDetailMissing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fill out sthing Fill out stFill out sthingFill out sthingFill out sthinghing" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Connect To Poster"
            android:textColor="#5F5B5B"
            android:textFontWeight="600"
            android:textSize="24dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_rounded_yellow"
                android:drawableLeft="@drawable/icon_email"
                android:maxHeight="20dp"
                android:text="Email"
                android:textSize="12sp"
                app:backgroundTint="@null" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_rounded_yellow"
                android:drawableLeft="@drawable/icon_email"
                android:maxHeight="20dp"
                android:text="Call"
                android:textSize="12sp"
                app:backgroundTint="@null" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_rounded_yellow"
                android:drawableLeft="@drawable/icon_email"
                android:maxHeight="20dp"
                android:text="Chat"
                android:textSize="12sp"
                app:backgroundTint="@null" />
        </LinearLayout>

        <!--                    <GridView-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:numColumns="4" />-->
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>