<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="-87dp"
        tools:layout_editor_absoluteY="-7dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarArrowBack3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:navigationIcon="@drawable/arrow_back_ios_24" />

        <TextView
            android:id="@+id/fillInforToAdoptPetNam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:text="Samantha"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/toolbarArrowBack3"
            tools:layout_editor_absoluteY="13dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="30dp"
                android:text="Gaurdian Information"
                android:textColor="#5F5B5B"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:background="#E6E5E5"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Full name"
                    android:textColor="#B3B3B3" />

                <EditText
                    android:id="@+id/nameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:ems="10"
                    android:hint="Ex : Jey Hoang"
                    android:inputType="text"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#57FFFFFF"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#EDECEC"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingTop="6dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="6dp">

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Date of birth" />

                    <EditText
                        android:id="@+id/birth_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:ems="10"
                        android:hint="12 - 05 - 2003"
                        android:inputType="datetime|date" />
                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="false"
                    android:layout_weight="1"

                    android:background="#EDECEC"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingTop="6dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="6dp">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gender" />

                    <Spinner
                        android:id="@+id/genderSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:background="#E6E5E5"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp">

                <TextView
                    android:id="@+id/Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Email"
                    android:textColor="#B3B3B3" />

                <EditText
                    android:id="@+id/emailEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:ems="10"
                    android:hint="Ex : jey@gmail,com"
                    android:inputType="text"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border_radius_form_6dp"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:layout_marginTop="20dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/address_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Address" />

                <EditText
                    android:id="@+id/adress_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:ems="10"
                    android:hint="Ex : 65 Thu Duc"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border_radius_form_6dp"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/country_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Country"
                    android:textColor="#B3B3B3" />

                <Spinner
                    android:id="@+id/countrySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border_radius_form_6dp"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/city_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="City"
                    android:textColor="#B3B3B3" />

                <Spinner
                    android:id="@+id/citySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border_radius_form_6dp"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/district_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="District"
                    android:textColor="#B3B3B3" />

                <Spinner
                    android:id="@+id/districtSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border_radius_form_6dp"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/ward_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Ward"
                    android:textColor="#B3B3B3" />

                <Spinner
                    android:id="@+id/wardSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border_radius_form_6dp"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/phone_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Phone" />

                <EditText
                    android:id="@+id/phone_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:ems="10"
                    android:hint="Ex : 0123456789"
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border_radius_form_6dp"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/request_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="The request" />

                <EditText
                    android:id="@+id/requestEdit"
                    android:layout_width="match_parent"
                    android:layout_height="117dp"
                    android:background="#00FFFFFF"
                    android:ems="10"
                    android:hint="Ex : I want to"
                    android:inputType="text" />
            </LinearLayout>

            <TextView
                android:id="@+id/book_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your home space"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Book appointment"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border_radius_form_6dp"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Date" />

                <EditText
                    android:id="@+id/datemeetEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:ems="10"
                    android:hint="12 - 05 - 2003"
                    android:inputType="datetime|date" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border_radius_form_6dp"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingTop="6dp"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Time"
                    android:textColor="#B3B3B3" />

                <Spinner
                    android:id="@+id/timeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fill_img_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fill_price">

                <ImageView
                    android:id="@+id/uploadImg1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="20dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toEndOf="@+id/fill_img"
                    app:layout_constraintTop_toTopOf="@+id/fill_img" />

                <ImageView
                    android:id="@+id/deleteImg1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintBottom_toTopOf="@+id/uploadImg1"
                    app:layout_constraintEnd_toEndOf="@+id/uploadImg1"
                    app:layout_constraintStart_toEndOf="@+id/uploadImg1"
                    app:layout_constraintTop_toTopOf="@+id/uploadImg1" />

                <ImageView
                    android:id="@+id/uploadImg2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toEndOf="@+id/uploadImg1"
                    app:layout_constraintTop_toTopOf="@+id/uploadImg1"
                    />

                <ImageView
                    android:id="@+id/deleteImg2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintBottom_toTopOf="@+id/uploadImg2"
                    app:layout_constraintEnd_toEndOf="@+id/uploadImg2"
                    app:layout_constraintStart_toEndOf="@+id/uploadImg2"
                    app:layout_constraintTop_toTopOf="@+id/uploadImg2"
                    />

                <ImageView
                    android:id="@+id/uploadImg3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="@+id/fill_img"
                    app:layout_constraintTop_toBottomOf="@+id/fill_img" />

                <ImageView
                    android:id="@+id/deleteImg3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintBottom_toTopOf="@+id/uploadImg3"
                    app:layout_constraintEnd_toEndOf="@+id/uploadImg3"
                    app:layout_constraintStart_toEndOf="@+id/uploadImg3"
                    app:layout_constraintTop_toTopOf="@+id/uploadImg3"
                    />

                <ImageView
                    android:id="@+id/uploadImg4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toEndOf="@+id/uploadImg3"
                    app:layout_constraintTop_toTopOf="@+id/uploadImg3" />

                <ImageView
                    android:id="@+id/deleteImg4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintBottom_toTopOf="@+id/uploadImg4"
                    app:layout_constraintEnd_toEndOf="@+id/uploadImg4"
                    app:layout_constraintStart_toEndOf="@+id/uploadImg4"
                    app:layout_constraintTop_toTopOf="@+id/uploadImg4"
                    />

                <ImageView
                    android:id="@+id/uploadImg5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toEndOf="@+id/uploadImg4"
                    app:layout_constraintTop_toTopOf="@+id/uploadImg4" />

                <ImageView
                    android:id="@+id/deleteImg5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintBottom_toTopOf="@+id/uploadImg5"
                    app:layout_constraintEnd_toEndOf="@+id/uploadImg5"
                    app:layout_constraintStart_toEndOf="@+id/uploadImg5"
                    app:layout_constraintTop_toTopOf="@+id/uploadImg5"
                    />



                <TextView
                    android:id="@+id/pic_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Post Picture"
                    android:textSize="18dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/fill_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rectangle_light_gray"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pic_title">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/add_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:backgroundTint="@color/blue"
                        android:clickable="true"
                        android:focusable="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Circular"
                        app:srcCompat="@drawable/add"
                        app:tint="@color/white" />
                    />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/fillBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:background="#59A9F2"
                android:layout_marginTop="10dp"
                app:backgroundTint="@null"
                android:text="Apply"
                android:textColorLink="#59A9F2" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>