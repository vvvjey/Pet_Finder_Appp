<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilterMissingPet">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarArrowBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_weight="0"
        android:layout_marginTop="17dp"
        android:layout_marginStart="20dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/arrow_back_ios_24" />
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="@+id/toolbarArrowBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        android:layout_marginBottom="100dp"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#5F5B5B"
        android:text="Location"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarArrowBack"
        />
    <EditText
        android:id="@+id/edtChooseLocation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/black"
        android:hint="Choose your location"
        android:layout_marginTop="10dp"
        android:drawableEnd="@drawable/location"
        android:drawableStart="@drawable/icons8_find"
        android:drawablePadding="8dp"
        android:background="@drawable/edittext_rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLocation"
        app:layout_constraintVertical_chainStyle="packed" />
    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#5F5B5B"
        android:text="Distance: 20km"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtChooseLocation"
        />
    <LinearLayout
        android:id="@+id/tvSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/seekbar_border"
        android:padding="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDistance">

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:progress="20"
            android:progressTint="@color/blue"
            android:progressBackgroundTint="@color/light_blue"
            android:thumb="@drawable/custom_thumb"
            android:max="100"
            />


    </LinearLayout>
    <TextView
        android:id="@+id/tvPetCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pet Category"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textColor="#5F5B5B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSeekBar"
        />
    <HorizontalScrollView
        android:id="@+id/categoryScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPetCategory"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:scrollbars="none"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/catCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Cat  "
                android:cursorVisible="true"
                android:textColor="@drawable/text_color_selector"
                android:background="@drawable/background_selector"
                android:drawableStart="@drawable/cat_icon"
                android:focusable="true"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_marginHorizontal="10dp"
                />

            <TextView
                android:id="@+id/dogCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Dog  "
                android:cursorVisible="true"
                android:textColor="@drawable/text_color_selector"
                android:background="@drawable/background_selector"
                android:drawableStart="@drawable/dog_icon"
                android:focusable="true"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_marginHorizontal="10dp"/>

            <TextView
                android:id="@+id/turtleCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Turtle  "
                android:cursorVisible="true"
                android:textColor="@drawable/text_color_selector"
                android:background="@drawable/background_selector"
                android:drawableStart="@drawable/turtle_icon"
                android:focusable="true"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_marginHorizontal="10dp"/>

            <TextView
                android:id="@+id/hamsCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Hams  "
                android:cursorVisible="true"
                android:textColor="@drawable/text_color_selector"
                android:background="@drawable/background_selector"
                android:drawableStart="@drawable/hams_icon"
                android:focusable="true"
                android:padding="5dp"
                android:textAlignment="center"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:id="@+id/tvPurpose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purpose"
        android:textSize="22sp"
        android:textColor="#5F5B5B"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryScroll"
        />

    <HorizontalScrollView
        android:id="@+id/purposeScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPurpose"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:scrollbars="none"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/missingCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Missing  "
                android:cursorVisible="true"
                android:textColor="@drawable/text_color_selector"
                android:background="@drawable/background_selector"
                android:focusable="true"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_marginHorizontal="10dp"
                />

            <TextView
                android:id="@+id/seenCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Seen  "
                android:cursorVisible="true"
                android:textColor="@drawable/text_color_selector"
                android:background="@drawable/background_selector"
                android:focusable="true"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_marginHorizontal="10dp"
                />

            <TextView
                android:id="@+id/protectedCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Protected  "
                android:cursorVisible="true"
                android:textColor="@drawable/text_color_selector"
                android:background="@drawable/background_selector"
                android:focusable="true"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_marginHorizontal="10dp"
                />


        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/tvBreed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breed"
        android:textColor="#5F5B5B"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purposeScroll"
        />

    <Spinner
        android:id="@+id/spinnerBreed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tvBreed"
        tools:layout_editor_absoluteX="40dp" />

    <TextView
        android:id="@+id/tvColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color"
        android:textColor="#5F5B5B"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerBreed"
        />
    <Spinner
        android:id="@+id/spinnerColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tvColor"
        tools:layout_editor_absoluteX="40dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textSize="22sp"
        android:textColor="#5F5B5B"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerColor"
        />

    <HorizontalScrollView
        android:id="@+id/genderScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGender"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:scrollbars="none"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/maleCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Male  "
                android:cursorVisible="true"
                android:textColor="@drawable/text_color_selector"
                android:background="@drawable/background_selector"
                android:focusable="true"
                android:textAlignment="center"
                android:padding="5dp"
                android:drawableStart="@drawable/male_icon"
                android:layout_marginHorizontal="10dp"
                />

            <TextView
                android:id="@+id/femaleCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Female  "
                android:cursorVisible="true"
                android:textColor="@drawable/text_color_selector"
                android:background="@drawable/background_selector"
                android:focusable="true"
                android:textAlignment="center"
                android:padding="5dp"
                android:drawableStart="@drawable/female_icon"
                android:layout_marginHorizontal="10dp"
                />


        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/tvSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size"
        android:textSize="22sp"
        android:textColor="#5F5B5B"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genderScroll"
        />

    <HorizontalScrollView
        android:id="@+id/sizeScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSize"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:scrollbars="none"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/smallCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Small  "
                android:cursorVisible="true"
                android:textColor="@drawable/text_color_selector"
                android:background="@drawable/background_selector"
                android:focusable="true"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_marginHorizontal="10dp"
                />

            <TextView
                android:id="@+id/mediumCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Medium  "
                android:cursorVisible="true"
                android:textColor="@drawable/text_color_selector"
                android:background="@drawable/background_selector"
                android:focusable="true"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_marginHorizontal="10dp"
                />

            <TextView
                android:id="@+id/largeCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Large  "
                android:cursorVisible="true"
                android:textColor="@drawable/text_color_selector"
                android:background="@drawable/background_selector"
                android:focusable="true"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_marginHorizontal="10dp"
                />


        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size"
        android:textSize="22sp"
        android:textColor="#5F5B5B"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sizeScroll"
        />

    <HorizontalScrollView
        android:id="@+id/ageScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAge"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:scrollbars="none"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/babyCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Baby  "
                android:cursorVisible="true"
                android:textColor="@drawable/text_color_selector"
                android:background="@drawable/background_selector"
                android:focusable="true"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_marginHorizontal="10dp"
                />

            <TextView
                android:id="@+id/youngCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Young  "
                android:cursorVisible="true"
                android:textColor="@drawable/text_color_selector"
                android:background="@drawable/background_selector"
                android:focusable="true"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_marginHorizontal="10dp"
                />

            <TextView
                android:id="@+id/adultCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Adult  "
                android:cursorVisible="true"
                android:textColor="@drawable/text_color_selector"
                android:background="@drawable/background_selector"
                android:focusable="true"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_marginHorizontal="10dp"
                />

            <TextView
                android:id="@+id/seniorCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Senior  "
                android:cursorVisible="true"
                android:textColor="@drawable/text_color_selector"
                android:background="@drawable/background_selector"
                android:focusable="true"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_marginHorizontal="10dp"
                />


        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/btnViewMatches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="View Matches"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:background="@drawable/button_rounded"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@+id/ageScroll"
        />

            <Space
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintTop_toBottomOf="@+id/btnViewMatches"/>
        </LinearLayout>
    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>